#include <stdio.h>

int main() {
    int a, m, d;

    printf("Informe o ano: ");
    scanf("%d", &a);

    printf("Informe o mes: ");
    scanf("%d", &m);

    printf("Informe o dia: ");
    scanf("%d", &d);

    printf("Data: %d/%d/%d\n", d, m, a);
printf("Data ivertida : %d/%d/%d\n", a,m ,d );
    return 0;
}
